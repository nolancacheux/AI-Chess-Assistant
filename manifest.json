{
  "manifest_version": 3,
  "name": "AI Chess Assistant",
  "short_name": "ChessAI",
  "version": "4.0.0",
  "description": "Chrome extension integrating Stockfish chess engine for real-time position analysis, move evaluation, and intelligent suggestions. Features advanced board detection, position scoring, and educational insights into chess engine behavior.",
  "author": "Nolan Cacheux",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_icon": "assets/icon-48.png",
    "default_title": "AI Chess Assistant"
  },
  "content_scripts": [
    {
      "js": ["src/content/index.ts"],
      "matches": [
        "https://www.chess.com/*",
        "https://chess.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*.chess.com/*"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "homepage_url": "https://github.com/nolancacheux/AI-Chess-Assistant"
}
